.container {
  font-size: 26rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-logo {
  width: 220rpx;
  height: 94rpx;
  margin: 100rpx 0 140rpx 0;
}

.login-input {
  width: 670rpx;
  height: 56rpx;
}

.line {
  width: 670rpx;
  height: 2rpx;
  background-color: #E4E4E4;
  margin-bottom: 64rpx;
  margin-top: 30rpx;
}

.login-btn {
  font-size: 36rpx;
  color: #ffffff;
  width: 632rpx;
  height: 104rpx;
  line-height: 104rpx;
  text-align: center;
  background-color: #E26E76;
  border-radius: 53px;
  margin-top: 16rpx;
}

.login-tip {
  width: 462rpx;
  height: 22rpx;
  font-size: 22rpx;
  font-weight: 400;
  color: #666666;
  margin-top: 52rpx;
}

.login-code {
  font-size: 26rpx;
  width: 170rpx;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  color: #333333;
  border: 2rpx solid #333333;
  position: absolute;
  right: 60rpx;
  top: 496rpx;
  z-index: 9999;
}