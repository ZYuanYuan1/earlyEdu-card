.share-gift {
  width: 750rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item {
  width: 680rpx;
  height: 236rpx;
  background-color: #FFF4F2;
  display: flex;
  align-items: center;
  border-radius: 6rpx;
  margin-bottom: 20rpx;
}

.item>image {
  width: 236rpx;
  height: 236rpx;
  background-color: aquamarine;
  border-radius: 6rpx 0 0 6rpx;
}

.item-describe {
  width: 400rpx;
  height: 200rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.tag {
  width: 100rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 22rpx;
  color: #FF5339;
  border: 1rpx solid #FF5339;
  text-align: center;
}

.name {
  font-size: 26rpx;
  color: #333333;
}

.plus {
  font-size: 22rpx;
  color: #666666;
}

.price {
  font-size: 28rpx;
  color: #FF5339;
}

.price-old {
  color: #9B9B9B;
  text-decoration: line-through;
  margin-left: 10rpx;
}