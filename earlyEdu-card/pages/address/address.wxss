/* pages/address/address.wxss */
page {
  background: #F4f4f4
}

.addr_content {
  display: flex;
  background: #ffffff;
  margin-top: 20rpx;
}

.addr_right {
  flex: 0 0 10%;
  display: flex;
  align-items: center
}

.rignt_img {
  width: 28rpx;
  height: 28rpx;
  margin-right: 40rpx
}

.addr_left {
  padding: 15rpx 0 30rpx 30rpx;
  flex: 0 0 78%
}

.enable {
  width: 64rpx;
  height: 40rpx;
  border-radius: 8rpx;
  background: #CBB588;
  color: #ffffff;
  padding-left: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center
}

.top {
  display: inline;
  font-size: 32rpx;
  padding-right: 20rpx;

}

.add {
  font-size: 22rpx;
  color: #888888
}

.comment_footer {
  width: 750rpx;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #ffffff;
  display: flex;
  align-items: center;
}

.comment_footer button {
  width: 670rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #CBB588;
  color: #ffffff;
  align-items: center;
  font-size: 28rpx;
}