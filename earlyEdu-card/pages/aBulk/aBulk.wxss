page{
  background: #f4f4f4
}
.container {
  font-size: 26rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 组件样式 */
.item{
width:710rpx;
height:200rpx;
background-color:#ffffff;
display:flex;
align-items:center;
border-radius:6rpx;
margin-bottom:20rpx;
}
.content{
background:#ffffff;
width:710rpx;
border-radius:8rpx;
font-size:28rpx;
}
.content_item{
border-bottom:2rpx solid #e4e4e4;
display:flex;
justify-content:space-between;
height:88rpx;
align-items:center;
padding:0 20rpx;
}
.content_item:last-child{
  border:none
}
.btn_poster{
color:#ffffff;
background:linear-gradient(to right,#FC5937,#E52017);
border-radius:8rpx;
width:288rpx;
height:78rpx;
display:flex;
justify-content:center;
align-items:center;
margin-top:80rpx;
}
.share-gift {
  width: 750rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

