/* pages/me/me.wxss */
/* 头像部分 */
.header{
  display: flex;
  width: 100%;
  height: 340rpx;
  justify-content: center;
  align-items: center;
}
.headPortrait{
  width:220rpx;
  height: 220rpx;
  border-radius: 50%
}
.edit{
  width: 42rpx;
  height: 42rpx;
  position:absolute;
  right:0;
  bottom:0;
}
/* 内容 */
.content{
  margin: 0 30rpx;
  width: 690rpx;
  height: 100%;
}
.content_item{
  border-bottom: 2rpx solid  #F4F4F4;
  width: 100%;
  height: 110rpx;
  display: flex;
  align-items: center
}
.item_one{
  flex: 0 0 30%
}
.item_two{
  flex: 0 0 65%;
  text-align:right;
  margin-right:20rpx;
}
.arrow image{
   width: 12rpx;
   height: 24rpx
}