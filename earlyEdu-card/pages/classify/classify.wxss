page{
  background: #ffffff;
}
.container {
  width: 100%;
  height: 100%;
  color: #333333;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}
.nav_left{
  display: inline-block;
  width: 22%;
  height: 100%;
  text-align: center;
  border-right:2rpx solid #E4E4E4;
  position: fixed
}
.nav_left .nav_left_items{
  height: 35px;
  line-height: 35px;
  padding: 5px 0;
  border-right: 1px solid #f8f8f8;
  font-size: 14px;
  background: #fff;
}
.nav_left .nav_left_items.active{
  color: #D1B37A;
  border-right: none;
  border-left:4rpx solid #D1B37A;
}
.nav_right{
  width: 85%;
  margin: 12px 10px 20px 10px;
  background: #fff;
  padding-left: 168rpx;
  /*border-radius: 4px;*/
}
.nav_right .nodata{
  text-align: center;
  margin: 10px;
  font-size: 12px;
  color: #9F8A60
}
.nav_right .nav_right_items{
  padding-top: 12px;
  display: flex;
  flex-wrap: wrap;
  border-bottom: 2rpx solid #e4e4e4
}
.ite{
  width:150rpx;
  margin-right:30rpx;
  padding-bottom: 30rpx
}
.name{
  padding-top:20rpx;
  font-size:28rpx;
  font-weight:bold;

}
.nav_right .nav_right_items image{
  width: 150rpx;
  height: 100rpx;
}
.nav_right .nav_right_items text{
  color: #6f6f6f;
  display: block;
  margin-top: 10px;
  font-size: 12px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: center
}
