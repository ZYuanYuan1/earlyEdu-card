page {
  width: 100%;
  height: 100%;
  background-color: #F1EFEA;
}

.contanier {
  padding: 30rpx;
}

/* 头部 */
.header {
  width: 690rpx;
  height: 260rpx;
  background:url('https://img.sahuanka.com/earlyEdu-card/images/member_headimg.png') no-repeat;
  background-size: 100%;
  display: flex;
  justify-content: center;
}

.header image {
  width: 690rpx;
  height: 260rpx;
}

.header_content {
  text-align: center;
  color: #ffffff;
  width: 690rpx
}

.header_button {
  width: 340rpx;
  height: 76rpx;
  background: #CBB588;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  border-radius: 12rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}

/* 内容 */
.content {
  width: 610rpx;
  font-size: 28rpx;
  margin: 98rpx auto 0;
  text-align: justify;
  font-weight: bold;
  color: #333333;
  line-height: 46rpx;
}

.content_title {
  text-align: center;
  margin-bottom: 40rpx;
  font-size: 32rpx;
}

