/* 使用说明 */
.directions-view {
  width: 508rpx;
  position: absolute;
  top: 20%;
  left: 121rpx;
  z-index: 999;
}

.directions-close {
  width: 60rpx;
  height: 60rpx;
  margin-top: 60rpx;
  margin-left: 224rpx;
  line-height: 60rpx;
  color: #ffffff;
  border: 4rpx solid #ffffff;
  text-align: center;
  border-radius: 60rpx;
  font-weight: bold;
}

.directions-content {
  font-size: 22rpx;
  width: 508rpx;
  height: 556rpx;
  background: url('https://img.sahuanka.com/earlyEdu-card/images/directions_bg.png') no-repeat;
  background-size: 508rpx 556rpx;
  color: #333333;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.directions-content .title {
  font-size: 32rpx;
  color: #000000;
  letter-spacing: 4rpx;
  font-weight: 500;
  margin: 60rpx 0 30rpx 0;
}

.directions-content .line {
  width: 44rpx;
  height: 6rpx;
  background: rgba(255, 83, 57, 1);
  margin-bottom: 58rpx;
}

.directions-content .item {
  width: 366rpx;
  margin-bottom: 38rpx;
}

.directions-content .item:nth-of-type(5) {
  margin-bottom: 50rpx;
}

.directions-content .time{
  width: 366rpx;
}

.directions-content .time text{
  color: #FF5339;
}