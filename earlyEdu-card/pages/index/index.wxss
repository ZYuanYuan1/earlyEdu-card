/* pages/index/index.wxss */
/* 地点、查询 */
.search{
  display:flex;
  background:#FFFECF;
  padding:7px 15px 8px 15px;
  position:fixed;
  z-index:500;
  width:690rpx;
  justify-content: space-around

}
.serPosition{
  display: flex;
}
.serPosition image{
  width:22rpx;
  height:26rpx;
}
.serPosition text{
  font-size:24rpx;
  color:#3A3A3A;
  margin-left:6rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.searchCon{
  display:flex;
  background:#ffffff;
  border-radius:22rpx;
  margin-left: 20rpx;
  font-size: 24rpx;
  flex-flow:1;
  height: 55rpx
  }
.searchCon image{
  width:32rpx;
  height:32rpx;
  margin-top:12rpx;
  }
  .searPl{
    font-size: 24rpx;
    color: #8F8F93
  }
  /* 轮播图 */
  .inSwiper{
    padding-top: 80rpx;
    height: 280rpx
  }
  .banner_image{
    width: 100%;
    height: 280rpx
  }
  /* 导航 */
  .nav{
    display:flex;
    flex-wrap:wrap;
    background: #ffffff
  }
  .navList{
    width:250rpx;
    height: 206rpx;
    text-align:center;

  }
  .navList image{
    width: 136rpx;
    height: 136rpx
  }
  .navList view{
    font-size:24rpx;
    color:#333333;
  }
  .navDisc{
    height: 63rpx;
    display:flex;
    justify-content:center;
    align-items:center;
  }
  .navDisc image{
    width: 20rpx;
    height: 20rpx;
    margin-right: 10rpx
  }
  .navDisc text{
    font-size: 20rpx;
    color: #DABC82
  }
  /* n内容 */
  .content{
    display:flex;
    flex-wrap:wrap;
    box-sizing: content-box;
    line-height:40rpx;   
    padding:30rpx 20rpx 10rpx 20rpx
  }
  .conGoods{
  margin-left:10rpx;
  margin-right:10rpx;
  margin-bottom:20rpx;
  border-radius: 12rpx
  }
  .conTitle{
    font-size:32rpx;
    font-weight:bold;
    color: #333333;
    text-align: center;
    margin-top:60rpx;

  }
  .conGoods image{
    width: 334rpx;
    height: 334rpx;
    border-radius:12rpx 12rpx 0 0;
  }
  .conDis{
    font-size:20rpx;
    color:#9F8A60;
    width:310rpx;
    line-height: 32rpx;
    background:#F1ECE2;

  }
  .conName{
    font-size:24rpx;
    padding:10px 2px 0px 10px;
    width: 310rpx
  }
  .price{
    font-size:26rpx;
    color:#D0021B;
    width: 310rpx;
  }
  .con{
    background:#ffffff;
    
  }
  .more{
    font-size:24rpx;
    color:#9F8A60;
    text-align:center;
    width:100%;
    height:50rpx;
  }
  .conAll{
        padding:10px 2px 0px 10px;
  }
  .conVip{
    width: 100rpx;
    height: 100rpx;
    background: linear-gradient(#EADAB2,#D1B37A);
    border-radius: 12rpx 0rpx 12rpx 0rpx;
    font-size: 32rpx;
    color: #ffffff;
    font-weight: 600;
    display: flex;
    justify-content: center;
    align-items: center;
    position:absolute;
    z-index:1;

  }
  .des{
    padding-top:10rpx;
    padding-bottom:10rpx;
    overflow:hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
  }
  .linePrice{
    text-decoration: line-through;
    font-size: 24rpx;
    color: #888888;
    margin-left: 20rpx
  }
