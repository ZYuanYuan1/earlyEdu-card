/* 头部 */
.header {
  display: fixed;
  background: #FFFECF;
  height: 240rpx;
  width: 100%;

}

/* 动画 */
/* @-webkit-keyframes bounce-up {
 25% {-webkit-transform: translateY(10rpx);height: 50rpx}
 50%, 100% {-webkit-transform: translateY(0);}
 75% {-webkit-transform: translateY(-10rpx);height: 70rpx}
} */

@keyframes bounce-up {
  25% {
    transform: translateY(6rpx);
    height: 56rpx
  }

  50%,
  100% {
    transform: translateY(0);
  }

  75% {
    transform: translateY(-6rpx);
    height: 66rpx
  }
}

