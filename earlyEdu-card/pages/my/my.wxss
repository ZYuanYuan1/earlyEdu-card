.headerCon {
  display: flex;
}

.headerConAll {
  text-align: center;
  height: 180rpx;
}

.headerConA image {
  width: 104rpx;
  height: 104rpx;
  /* border-radius: ; */
  border-radius: 50%;
}

.headerConB {
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
}

.headerConB image {
  margin-left: 10rpx;
  width: 36rpx;
  height: 36rpx;
}
.vipIcon {
  width: 130rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 22rpx;
  color: #FFEFA6;
  background-color: #2C2C2C;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  margin-left: 6rpx;
}

.vipIcon image {
  width: 24rpx;
  height: 18rpx;
  margin-right: 4rpx;
}

.headerConC image {
  width: 80rpx;
  height: 80rpx;
}

.vipCard {
  display: flex;
  justify-content: space-between;
  width: 630rpx;
  height: 60rpx;
  background: #333333;
  color: #E4DCC0;
  font-size: 24rpx;
  border-radius: 16rpx 16rpx 0 0;
  margin: 0 auto;
  line-height: 55rpx;
  padding: 0 20rpx;
  -webkit-animation: bounce-up 2s linear infinite;
  animation: bounce-up 2s linear infinite;
}

.vipCardA image {
  width: 24rpx;
  height: 20rpx;

}

.vipCardA text {
  margin-left: 8rpx;

}

.myCon {
  display: flex;
  padding: 24rpx 40rpx;
  background: #ffffff;
  height: 42rpx
}

.myImg {
  flex: 0 0 10%;
}

.myImg image {
  width: 38rpx;
  height: 38rpx;
}

.myInfo {
  flex: 0 0 85%;
}

.myInfo text {
  font-size: 30rpx;
  color: #333333
}

.concact {
  background: #ffffff;
  font-size: 30rpx;
  padding: 0;
  margin-top: -15rpx;
  text-align: left;

}

.concact::after {
  border: none
}

.myArrow {
  flex: 0 0 5%;
  text-align: center;
}

.myArrow image {
